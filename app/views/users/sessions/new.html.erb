
<div class="row">
<h2>Log in as a user</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :email, :class=>"right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.email_field :email, autofocus: true, :id =>"right-label" %>
        </div>
      </div>
    </div>
  </div>



  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <%= f.label :password, :class=>"right inline" %>
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password, autocomplete: "off", :id =>"right-label" %>
        </div>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="small-3 columns">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class =>"button green"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>

