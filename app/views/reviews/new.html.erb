<h1>New reviews go here</h1>

<%= form_for :review, url: reviews_path do |f| %> 
 <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
  	<%= f.label :pill_name %></br>
  	<%= f.text_field :pill_name %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>